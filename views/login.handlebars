<body class="bg-dark">

  <div class="container">
    <div class="card card-login mx-auto mt-5">
      <div class="card-header">Acessar</div>
      <div class="card-body">
        <form action="/usuarios/login" method="POST">
          <div class="form-group">
            <div class="form-label-group">
              <input name="email" type="email" id="inputEmail" class="form-control" placeholder="example@example.com" required="required" autofocus="autofocus">
              <label for="inputEmail">Email</label>
            </div>
          </div>
          <div class="form-group">
            <div class="form-label-group">
              <input name="senha" type="password" id="inputPassword" class="form-control" placeholder="*******" required="required">
              <label for="inputPassword">Senha</label>
            </div>
          </div>
          <div class="form-group">
            <div class="checkbox">
              <label>
                <input type="checkbox" value="remember-me">
                Lembrar senha
              </label>
            </div>
          </div>
          <button type="submit" class="btn btn-primary btn-block">Entrar</button>
        </form>
        <div class="text-center">
          <a class="d-block small mt-3" href="/register">Registrar uma conta</a>
          <a class="d-block small" href="/forgot-password">Esqueceu a senha?</a>
        </div>
      </div>
    </div>
  </div>

</body>